// Hãy cài đặt hàm đệ quy tính T(n) = n! = 1 x 2 x 3 x … x n. Trong đó T(0) = 1

#include <iostream>
using namespace std;

int giaithua(int n) {
    if (n == 0) {
        return 1;
    } else {
        return n * giaithua(n-1);
    }
}

int main() {
    int n = 10;
    cout << "Voi n =" << n << " thi  T(n) = n! = 1 x 2 x 3 x … x n = " << giaithua(n) << endl;
    return 0;
}
